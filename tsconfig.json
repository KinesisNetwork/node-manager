{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2015",
    "rootDir": "src",
    "baseUrl": "src",
    "types": ["node"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "exclude": [
    "node_modules"
  ]
}
